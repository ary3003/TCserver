<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.in.trashcashserver.LoginActivity">




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Unique ID"
        android:paddingLeft="5dp"
        android:textColorHint="@color/colorAppBack"
        android:textColor="@color/colorAppBack"
        android:paddingRight="5dp"

        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/eT_Toll"
        android:id="@+id/eT_uid" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Toll ID"
        android:textColorHint="@color/colorAppBack"
        android:ems="10"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="38dp"
        android:id="@+id/eT_Toll"
        android:layout_below="@+id/eT_uid"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tV_loc"
        android:paddingLeft="5dp"
        android:textSize="20dp"
        android:textColor="@color/colorAppBack"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/eT_uid"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Get location"
        android:background="@drawable/button_capsule"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_loc"
        android:textColor="@color/colorAppBack"
        android:textAllCaps="false"
        android:layout_marginLeft="5dp"
        android:layout_above="@+id/tV_loc" />

    <Button
        android:background="@drawable/button_capsule"
        android:layout_height="40dp"
        android:text="Sign In"
        android:textColor="@color/colorAppBack"
        android:layout_width="wrap_content"
        android:id="@+id/button_signin"
        android:layout_below="@+id/eT_Toll"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />


</RelativeLayout>
